<p id="notice"><%= notice %></p>
<img src="http://www.railsbridge-montreal.com/assets/logo-afba3608b2c1b1deed34c562a1f27f81.png" height="63" width="32"> RailsBridge Montreal
<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @topics.each do |topic| %>
  <tr>
    <td><%= topic.title %></td>
    <td><%= topic.description %></td>
    <td><%= pluralize(topic.votes.count, "vote") %></td>
    <td><%= button_to '+1', upvote_topic_path(topic), method: :post %></td>
    <td><%= link_to 'Click for details', topic %></td>
    <td><%= link_to 'Edit this topic', edit_topic_path(topic) %></td>

  </tr>
<% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
